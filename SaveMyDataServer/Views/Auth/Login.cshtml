@model SaveMyDataServer.ViewModels.Auth.LoginViewModel;
@{
    ViewData["title"] = "Login";
}

<div class="container mt-5 text-center">
    <h1 class="text-dark">Sign in</h1>
    <form asp-controller="auth" asp-action="login" method="post">
        <div class="form-group">
            <input type="text" placeholder="Username or Email" asp-for="@Model.Email" class="form-control">
            <span class="text-danger" asp-validation-for="@Model.Email" />
        </div>

        <div class="form-group">
            <input type="password" placeholder="Password" asp-for="@Model.Password" class="form-control">
            <span class="text-danger" asp-validation-for="@Model.Password" />
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-dark btn-block" value="Sign in" />
        </div>
    </form>
    <div class="form-group">
        <a class="btn btn-info btn-block" href="@SaveMyDataServer.Static.ServerRedirectsURLs.ChangePassword">Forgot password</a>
    </div>

</div>