                {
                "email" : "mycoolMail@example.com",
                "password" : "pizza"
                }

                <spam class="text-light d-block">Response</spam>
            <p class="text-warning">
                {
                "token": "{JWTToken}",
                "id": "326a5ae7-00d1-4b91-9d21-299db076cdab",
