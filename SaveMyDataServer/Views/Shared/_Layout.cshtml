<!DOCTYPE html>
<html lang="en-GB">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewData["Title"]</title>
    <!--Add the stylesheets-->
    <link href="~/css/main.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

    <!--Add the javascripts-->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js" integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    <!--Add fontawesome-->
    <script src="https://kit.fontawesome.com/4f4f506b83.js" crossorigin="anonymous"></script>
    <!--Add custom js files-->
    <script src="~/js/main.js" type="text/javascript"></script>

</head>
<body>
    <div id="hole-page-container">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark ">
            <a class="navbar-brand" href="/">Save My Data <span class="badge badge-warning">Test mode</span></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#mainNavigation" aria-controls="mainNavigation" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="mainNavigation">
                <ul class="navbar-nav">
                    @{
                        if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="@SaveMyDataServer.Static.ServerRedirectsURLs.Home">Home</a>
                            </li>
                        }
                    }
                    <li class="nav-item">
                        <a class="nav-link" href="@SaveMyDataServer.Static.ServerRedirectsURLs.Guid">Guid</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@SaveMyDataServer.Static.ServerRedirectsURLs.Contact">Contact</a>
                    </li>
                </ul>
                <ul class="navbar-nav ml-auto">
                    @{
                        if (!User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item d-inline">
                                <a class="nav-link text-light" href="@SaveMyDataServer.Static.ServerRedirectsURLs.Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-outline-info" href="@SaveMyDataServer.Static.ServerRedirectsURLs.Register">Register</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item ">
                                <a class="btn btn-outline-warning" href="@SaveMyDataServer.Static.ServerRedirectsURLs.Logout">Logout</a>
                            </li>
                        }
                    }
                </ul>
            </div>
        </nav>
        <div id="top-page-messages-part">
            @{ if (ViewBag.ErrorMessage != null)
                {
                    <div class="alert alert-danger text-center m-4" role="alert">
                        @ViewBag.ErrorMessage
                    </div>
                }
                else if (ViewBag.SuccessMessage != null)
                {
                    <div class="alert alert-success text-center m-4" role="alert">
                        @ViewBag.SuccessMessage
                    </div>
                }
            }
        </div>
        <main>
            @RenderBody()
        </main>
    </div>
    <footer class="text-center">
        <hr class="m-0" />
        <span>Copyright &copy; @DateTime.Now.Year</span>
    </footer>
</body>
</html>